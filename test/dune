(executable
 (name rfc2045)
 (modules rfc2045)
 (libraries alcotest mrmime))

(executable
 (name rfc2047)
 (modules rfc2047)
 (libraries alcotest mrmime))

(executable
 (name rfc5322)
 (modules rfc5322)
 (libraries alcotest mrmime))

(executable
 (name fe)
 (modules fe)
 (libraries jsonm alcotest mrmime))

(executable
 (name obs_unstruct)
 (modules obs_unstruct)
 (libraries alcotest mrmime))

(executable
 (name date)
 (modules date)
 (libraries alcotest mrmime))

(executable
 (name msg_id)
 (modules msg_id)
 (libraries alcotest mrmime))

(alias
 (name runtest)
 (deps (:rfc2045 rfc2045.exe))
 (action (run %{rfc2045} --color=always)))

